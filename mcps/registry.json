      "technologies": ["neo4j", "cypher", "graph"],
      "setup_guide": "neo4j-database.md",
      "auto_install": false,
      "required_by": ["neo4j-expert"],
      "color": "cyan",
      "tags": ["database", "graph", "cypher"],
      "homepage": "https://github.com/anthropics/mcp-neo4j",
      "installation": {
        "command": "npm",
        "args": ["install", "-g", "@anthropic-ai/mcp-neo4j"],
        "config": {
          "mcpServers": {
            "neo4j": {
              "command": "npx",
              "args": ["@anthropic-ai/mcp-neo4j"],
              "env": {
                "NEO4J_URI": "bolt://localhost:7687",
                "NEO4J_USERNAME": "neo4j",
                "NEO4J_PASSWORD": "password"
              }
            }
          }
        }
      }
