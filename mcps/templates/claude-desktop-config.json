{
  "mcpServers": {
    "shadcn-components": {
      "command": "npx",
      "args": ["@anthropic-ai/shadcn-components"]
    },
    "shadcn-themes": {
      "command": "npx",
      "args": ["@anthropic-ai/shadcn-themes"]
    },
    "playwright": {
      "command": "npx",
      "args": ["@anthropic-ai/mcp-playwright"]
    },
    "neo4j": {
      "command": "npx",
      "args": ["@anthropic-ai/mcp-neo4j"],
      "env": {
        "NEO4J_URI": "bolt://localhost:7687",
        "NEO4J_USERNAME": "neo4j",
        "NEO4J_PASSWORD": "your_password_here"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["@anthropic-ai/mcp-filesystem"]
    }
  }
}
