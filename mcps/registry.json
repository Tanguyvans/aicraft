    {
      "name": "shadcn-components",
      "description": "Access shadcn/ui components and blocks directly in Claude Code",
      "package": "@anthropic-ai/shadcn-components",
      "category": "ui",
      "technologies": ["react", "typescript", "tailwind"],
      "setup_guide": "shadcn-components.md",
      "auto_install": true,
      "required_by": ["shadcn-ui-expert"],
      "color": "blue",
      "tags": ["components", "ui", "react"],
      "homepage": "https://github.com/anthropics/mcp-shadcn",
      "installation": {
        "command": "npm",
        "args": ["install", "-g", "@anthropic-ai/shadcn-components"],
        "config": {
          "mcpServers": {
            "shadcn-components": {
              "command": "npx",
              "args": ["@anthropic-ai/shadcn-components"]
            }
          }
        }
      }
    },
